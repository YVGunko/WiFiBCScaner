<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yg.wifibcscaner.activity.OutDocsActivity">


    <Button
        android:id="@+id/addOutDoc"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginBottom="10dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:onClick="onButtonClick"
        android:tooltipText="@string/add_record_hint"
        android:text="@string/add_record"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"></Button>

    <Button
        android:id="@+id/daysToView"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginBottom="10dp"
        android:onClick="onButtonDaysClick"
        android:tooltipText="@string/days_buton_hint"
        android:text="@string/one_day"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"></Button>

    <include layout="@layout/content_out_doc" />

</android.support.constraint.ConstraintLayout>
